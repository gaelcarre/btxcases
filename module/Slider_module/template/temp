	<script type="text/javascript" src="script/SudoSlider/js/jquery.sudoSlider.min.js"></script>
	<script type="text/javascript" >
		$(document).ready(function(){   
		   var sudoSlider = $('#slider').sudoSlider({
				prevNext:false,
				customLink: '.custom',
				autowidth:false,
				autoheight:false
			});
		   $('#slidemenu > ul >li').click(function(){
		   		$('#slidemenu > ul >li').removeClass("active");
		   		$(this).addClass("active");
		   });
	
		   $('#slidemenu').find("img").each(function(){
		   	console.log($(this));
		   		$(this).css({height:40});
		   });
		});
	</script>
	{/literal}
	<div style="position:relative;">
